<launch>

  <!-- I need to declare that this launch need these args -->
  <arg name="kalman_base"/>
  <arg name="camera_ns"/>
  <arg name="camera_window" default="false"/>

  <node name="$(arg camera_ns)_acquisition_identification" pkg="skeleton_trajectory" type="mainRealSense.py"  output="screen" >
    <param name="camera_ns" type="str" value="$(arg camera_ns)" />
    <param name="camera_window" type="bool" value="$(arg camera_window)" />
  </node>

  <node unless="$(arg kalman_base)" name="$(arg camera_ns)_kinematic_kalman" pkg="skeleton_trajectory" type="mainKalmanLimbs.py"  output="screen" >
    <param name="camera_ns" type="str" value="$(arg camera_ns)" />
  </node>
  <node if="$(arg kalman_base)" name="$(arg camera_ns)_indipendent_kalman" pkg="skeleton_trajectory" type="mainKalman.py"  output="screen" >
    <param name="camera_ns" type="str" value="$(arg camera_ns)" />
  </node>

</launch>
